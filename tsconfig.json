{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext", "DOM"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    // "bun-types" is required for when using
    // "types": ["bun-types", "Phaser"],
    "typeRoots": [
      "node_modules/@types",
      "node_modules/bun-types/types",
      "node_module/phaser/types"
    ],
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
